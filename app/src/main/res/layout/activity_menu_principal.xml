<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4">

    <Button
        android:id="@+id/btn_marcador_fisico"
        android:layout_width="198dp"
        android:layout_height="169dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/marcador_fisico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Marcador_Truco" />

    <Button
        android:id="@+id/btn_marcador_digital"
        android:layout_width="206dp"
        android:layout_height="123dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/marcador_digital"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_marcador_fisico" />

    <Button
        android:id="@+id/btn_ajuda"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/botao_ajuda"
        android:text="@string/ajuda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_marcador_digital" />

    <TextView
        android:id="@+id/txt_Marcador_Truco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/marcadordetruco"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>